@model Customer
@{
    ViewData["Title"] = "Klient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<h3>Typ subskrypcji: @Model.MembershipType.Name</h3>
@if(Model.BirthdayDate!=null)
{
    var dateTime = (DateTime)Model.BirthdayDate;
<h3>Data urodzenia: @dateTime.Day-@dateTime.Month-@dateTime.Year</h3>
}
